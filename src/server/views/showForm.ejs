<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script defer src="/js/showForm.js"></script>
  </head>
  <body class="container">
    <!-- Navbar Start -->
    <%- include("partials/nav.ejs") %>
    <!-- Navbar End -->
    <h1 id="form-title"><%= name %></h1>
    <h1 id="form-id" style="display: none"><%= id %></h1>
    <div class="container">
      <a href="/forms/edit/<%= id %>" class="btn btn-primary">Edit</a>
      <a href="" class="btn btn-danger">Delete</a>
    </div>
    <div class="container mt-2">
      <h3>Responses</h3>
      <div class="container mt-2">
        <a href="/forms/<%= id %>/response/new" class="btn btn-primary"
          >Add Response</a
        >
        <button id="export-btn" class="btn btn-success">
          Export Responses
        </button>
      </div>
      <table class="table mt-2">
        <thead>
          <tr>
            <th>ID</th>
            <% let questionCount = 0; questions.forEach(question => {
            questionCount+=1; %>
            <th>Question <%= questionCount %> Rating</th>
            <%}) %>
          </tr>
        </thead>
        <tbody>
          <!-- Response Item Start -->
          <!--
          <tr>
            <td>1</td>
            <td>5</td>
            <td>4</td>
            <td>3</td>
          </tr>
          -->
          <!-- Response Item End -->
          <% responses.forEach(response => { %>
          <tr>
            <td><%= response._id %></td>
            <% response.ratings.forEach(rating => { %>
            <td><%= rating %></td>
            <% }) %>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
