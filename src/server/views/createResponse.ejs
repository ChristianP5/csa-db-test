<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script defer src="/js/createResponse.js"></script>
  </head>
  <body>
    <!-- Navbar Start -->
    <%- include("partials/nav.ejs") %>
    <!-- Navbar End -->
    <main class="container w-25">
      <h1>Add Response</h1>
      <h1 id="form-id" style="display: none"><%= id %></h1>
      <form id="main-form" action="" method="post">
        <input
          type="text"
          name="formId"
          style="display: none"
          value="<%= id %>"
        />
        <div class="form-floating">
          <select
            name="department"
            id="department"
            class="form-select"
            placeholder="Department"
          >
            <option value="Bob">Bob</option>
          </select>
          <label for="department" class="form-label">Department</label>
        </div>
        <!-- Questions List Start -->
        <div id="questions-list" class="container">
          <!-- Question Item Design Start -->
          <!--
          <div class="row mt-2">
            <div class="col">
              <label for="question-n">Question N</label>
              <input
                type="number"
                name="question-n"
                id="question-n"
                class="form-control"
                placeholder=""
              />
            </div>
          </div>
          -->
          <!-- Question Item Design End -->
          <% let questionCount = 1; questions.forEach(question => {
          questionCount+=1; %>
          <div class="row mt-2">
            <div class="col">
              <label for="ratng-<%= questionCount %>"><%= question %></label>
              <input
                type="number"
                name="rating"
                id="rating-<%= questionCount %>"
                class="form-control"
                placeholder=""
                value="0"
              />
            </div>
          </div>
          <% }) %>
        </div>
        <!-- Questions List End -->
        <div class="container mt-2">
          <button id="submit-response-btn" class="btn btn-primary btn-sm">
            Create Response
          </button>
          <a href="/forms/show/<%= id %>" class="btn btn-secondary btn-sm"
            >Cancel</a
          >
        </div>
      </form>
    </main>
  </body>
</html>
