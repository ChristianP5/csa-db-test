<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script defer src="/js/editForms.js"></script>
  </head>
  <body class="container">
    <!-- Navbar Start -->
    <%- include("partials/nav.ejs") %>
    <!-- Navbar End -->
    <h1>Edit Forms</h1>
    <h1 id="form-id" style="display: none"><%= id %></h1>
    <form id="main-form" action="" method="post">
      <div class="container">
        <div class="form-floating">
          <input
            type="text"
            name="name"
            id="name-input"
            class="form-control"
            placeholder="Form Name"
            value="<%= name %>"
          />
          <label for="name-input" class="form-label">Name</label>
        </div>
      </div>
      <div class="container" id="questions-list">
        <!-- Question Item Start -->
        <!--
          <div class="form-floating mt-2">
            <input
              type="text"
              name="question"
              id="question-n"
              class="form-control"
              placeholder="question-n"
            />
            <label for="question-n" class="form-label">Question N</label>
          </div>
          -->
        <!-- Question Item End -->

        <% let questionCount = 0; questions.forEach(question => { questionCount
        += 1; %>
        <div class="form-floating mt-2">
          <input
            type="text"
            name="question"
            id="question-n"
            class="form-control"
            placeholder="question-n"
            value="<%= question %>"
          />
          <label for="question-n" class="form-label">Insert Question</label>
          <button id="delete-question-btn" class="btn btn-danger btn-sm">
            Remove Question
          </button>
        </div>
        <% }) %>
      </div>

      <div class="container mt-2">
        <div class="row">
          <div class="col">
            <button type="button" id="add-question-btn" class="btn btn-success">
              Add Question
            </button>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col">
            <button type="submit" id="update-form-btn" class="btn btn-primary">
              Update Form
            </button>
          </div>
        </div>
      </div>
    </form>
  </body>
</html>
